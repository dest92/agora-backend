{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@app/lib-db": ["libs/lib-db/src"],
      "@app/lib-db/*": ["libs/lib-db/src/*"],
      "@app/lib-auth": ["libs/lib-auth/src"],
      "@app/lib-auth/*": ["libs/lib-auth/src/*"],
      "@app/lib-events": ["libs/lib-events/src"],
      "@app/lib-events/*": ["libs/lib-events/src/*"],
      "@app/lib-contracts": ["libs/lib-contracts/src"],
      "@app/lib-contracts/*": ["libs/lib-contracts/src/*"],
      "@app/lib-realtime": ["libs/lib-realtime/src"],
      "@app/lib-realtime/*": ["libs/lib-realtime/src/*"]
    }
  }
}
