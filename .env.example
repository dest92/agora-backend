# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWKS_URL=https://your-project.supabase.co/auth/v1/jwks
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agora_dev

# Redis (Required for EventBus and Socket.IO)
# Use rediss:// for TLS connections
REDIS_URL=rediss://:<PASSWORD>@<HOST>:<PORT>
# Example for local development:
# REDIS_URL=redis://localhost:6379

# JWT
JWT_AUDIENCE=authenticated
JWT_ISSUER=https://your-project.supabase.co/auth/v1

# Service Ports
GATEWAY_PORT=3000
BOARDS_PORT=3011
COLLAB_PORT=3012
SESSIONS_PORT=3013
NOTIFICATIONS_PORT=3014

# Service Hosts (for API Gateway to connect to microservices)
# Leave empty for local development (defaults to localhost)
# In production (Railway), set to: service-name.railway.internal
BOARDS_SERVICE_HOST=
COLLAB_SERVICE_HOST=
SESSIONS_SERVICE_HOST=
NOTIFICATIONS_SERVICE_HOST=

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3001

# Environment
NODE_ENV=development
